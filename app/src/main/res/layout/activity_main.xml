<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp">

        <TextView
            android:id="@+id/openingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="How Big Is Your Brain?"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:backgroundTint="#12AE19"
            android:onClick="start"
            android:padding="20sp"
            android:text="Go!"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:visibility="visible"
            app:cornerRadius="20sp" />

        <RelativeLayout
            android:id="@+id/playGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/sumView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="20sp"
                android:text="42 + 69"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/resultView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gridLay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/pointsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_marginRight="15sp"
                android:background="#FFB300"
                android:padding="5sp"
                android:text="0/0"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/againBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resultView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:backgroundTint="#43A047"
                android:onClick="playAgain"
                android:text="Play Again"
                android:textSize="16sp"
                android:visibility="invisible"
                app:cornerRadius="10sp" />

            <TextView
                android:id="@+id/timerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:background="#FFB300"
                android:padding="5sp"
                android:text="30s"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sumView"
                android:layout_marginTop="20sp">


                <Button
                    android:id="@+id/button0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:backgroundTint="#1E88E5"
                    android:onClick="chooseAnswer"
                    android:tag="0"
                    android:text="6"
                    android:textSize="80sp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:backgroundTint="#D81B60"
                    android:onClick="chooseAnswer"
                    android:tag="1"
                    android:text="6"
                    android:textSize="80sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:backgroundTint="#D81B60"
                    android:onClick="chooseAnswer"
                    android:tag="2"
                    android:text="6"
                    android:textSize="80sp"

                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:backgroundTint="#1E88E5"
                    android:onClick="chooseAnswer"
                    android:tag="3"
                    android:text="6"
                    android:textSize="80sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />
            </androidx.gridlayout.widget.GridLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>